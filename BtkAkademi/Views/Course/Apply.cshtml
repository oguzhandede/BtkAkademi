@model Candidate
<div class="display-6">
	Apply
</div>

<form method="post" asp-action="Apply" >

	<div class="text-danger" asp-validation-summary="All"> </div>

	<div class="form-group my-2">
		<label asp-for="Email" >E-mail</label>
		<input asp-for="Email" class="form-control" />
	</div>
	<div class="form-group my-2">
		<label asp-for="FirstName">Firs tName</label>
		<input asp-for="FirstName" class="form-control" />
	</div>
	<div class="form-group my-2">
		<label asp-for="LastName">Last Name</label>
		<input asp-for="LastName" class="form-control" />
	</div>
	<div class="form-group my-2">
		<label asp-for="Age">Age</label>
		<select asp-for="Age"asp-forss="form-control">
			<option value="18">18</option>
			<option value="19">19</option>
			<option value="20">20</option>
			<option value="21">21</option>
			<option value="22">22</option>
			<option value="23">23</option>
		</select>
	</div>
	<fieldset>
		<legend>Select One Course</legend>
		<p>
			<input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.NET Core MVC"  checked/>
			<label>Asp.net Core MVC</label>
		</p>
		<p>
			<input id="api" type="radio" asp-for="SelectedCourse" value="ASP.NET Core APİ" />
			<label>Asp.net Core APİ</label>
		</p>

		<p>
			<input id="BLAZOR" type="radio" asp-for="SelectedCourse" value="BLAZOR" />
			<label>BLAZOR</label>
		</p>

	</fieldset>
	<div>
		<button class="btn btn-primary" type="submit">Apply</button>
		<a asp-controller="Home" asp-action="Index" class="btn btn-warning">Home</a>
	</div>

</form>